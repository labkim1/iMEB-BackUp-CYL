<UserControl x:Name="SysInit" x:Class="BCPT.SystemInit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="540" Background="#FFD3AD05">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="540">
            <Label Content="BCPT System Initialize" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="215" Margin="0,50,0,0" VerticalAlignment="Top" Width="540">
            <TextBox x:Name="Log" HorizontalAlignment="Left" Height="215" Margin="-1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="540"/>
        </Border>
        <ProgressBar HorizontalAlignment="Left" Height="20" Margin="10,270,0,0" VerticalAlignment="Top" Width="520" RenderTransformOrigin="0.49,1"/>

    </Grid>
</UserControl>
